%html
  %head
    %title Annotate The Bastards!
    %link{:href => "http://code.jquery.com/mobile/1.0b1/jquery.mobile-1.0b1.min.css", :rel => "stylesheet"}/
    %script{:src => "http://code.jquery.com/jquery-1.6.1.min.js"}
    = javascript_include_tag 'application'
    %script{:src => "http://code.jquery.com/mobile/1.0b1/jquery.mobile-1.0b1.min.js"}
    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    = csrf_meta_tag
    :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-126126-6']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
  %body
    %div{:data => {:role => 'page'}}
      = yield
